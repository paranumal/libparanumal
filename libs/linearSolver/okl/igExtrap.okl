@kernel void igExtrap(const dlong N,
                      const int Nhistory,
                      const int shift,
                      @restrict const dfloat *coeffs,
                      @restrict const dfloat *uh,
                      @restrict dfloat *uex){

  for(dlong n=0;n<N;++n;@tile(256, @outer, @inner)){
    dfloat res = 0;
    for(int i=0;i<Nhistory;++i){
      dfloat ci = coeffs[i];
      if(ci!=0.0) {
        res += ci*uh[n + ((i+shift)%Nhistory)*N];
      }
    }
    uex[n] = res;
  }
}


@kernel void igExtrapSparse(const dlong N,
                            const int Nhistory,
                            const int shift,
                            const int Nsparse,
                            @restrict const int* sparseIds,
                            @restrict const dfloat *coeffs,
                            @restrict const dfloat *uh,
                            @restrict dfloat *uex){

  for(dlong n=0;n<N;++n;@tile(256, @outer, @inner)){
    dfloat res = 0;

    for(int i=0;i<Nsparse;++i){
      dfloat ci = coeffs[i];
      if (ci!=0.0) {
        int id = sparseIds[i];
        res += ci*uh[n + ((id+shift)%Nhistory)*N];
      }
    }
    uex[n] = res;
  }
}
