#define p_NT 256

@kernel void updateMINRES(const dlong Ntotal,
                          const dfloat ma2,   // -a2
                          const dfloat ma3,   // -a3
                          const dfloat alpha, // -del/gam
                          const dfloat beta,  // -gam/gamp
                          @restrict dfloat *z,
                          @restrict dfloat *q_old,
                          @restrict dfloat *q,
                          @restrict dfloat *r_old,
                          @restrict dfloat *r,
                          @restrict dfloat *p)
{
  for (dlong n = 0; n < Ntotal; n++; @tile(p_NT, @outer, @inner)) {
      dfloat zn = z[n];
      dfloat qn = q[n];
      dfloat q_oldn = q_old[n];
      dfloat rn = r[n];
      dfloat r_oldn = r_old[n];
      dfloat pn = p[n];

      /* z = z - a2*q - a3*q_old  */
      zn += ma2*qn;
      zn += ma3*q_oldn;

      /* q_old = q                */
      q_old[n] = qn;

      /* q = z                    */
      q[n] = zn;

      /* r_old = r                */
      r_old[n] = rn;

      /* r = p - (del/gam)*r      */
      rn = pn + alpha*rn;

      /* r = r - (gam/gamp)*r_old */
      rn += beta*r_oldn;
      r[n] = rn;
  }
}
