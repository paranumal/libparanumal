	    const dlong sep2  = emapP[sem*p_Nfaces + 1];
	    const dlong sep3  = emapP[sem*p_Nfaces + 2];

	    const int bc1      = sgeo[sid + 0*s_Nsgeo + s_BCID]; 
	    const int bc2      = sgeo[sid + 1*s_Nsgeo + s_BCID]; 
	    const int bc3      = sgeo[sid + 2*s_Nsgeo + s_BCID];

	    const dlong ep1 = sep1/s_Ncells; 
	    const dlong ep2 = sep2/s_Ncells; 
	    const dlong ep3 = sep3/s_Ncells; 

	    const int etype1 = elmList[ep1]; 
	    const int etype2 = elmList[ep2]; 
	    const int etype3 = elmList[ep3]; 

	    dfloat qp1  = 0,  qp2 =0,   qp3 = 0; 
	    dfloat xcp1 = 0, xcp2 =0,   xcp3= 0; 
	    dfloat ycp1 = 0, ycp2 =0,   ycp3= 0; 

	    if(etype1==s_FVFV_TYPE){
	      qp1   = sq[sep1]; 
	      xcp1  = vgeo[sep1*s_Nvgeo + s_CXID];  
	      ycp1  = vgeo[sep1*s_Nvgeo + s_CYID]; 
	    }else{ // DGFV Tpe
	      const int fp = fmapP[sem*p_Nfaces + 0];
	      qp1  = sface[sep1*p_Nfaces + fp];
	      xcp1 =  sgeo[sid + 0*s_Nsgeo + s_FXID];
	      ycp1 =  sgeo[sid + 0*s_Nsgeo + s_FYID];
	    }

	    if(etype2==s_FVFV_TYPE){
	      qp2   = sq[sep2]; 
	      xcp2  = vgeo[sep2*s_Nvgeo + s_CXID];  
	      ycp2  = vgeo[sep2*s_Nvgeo + s_CYID]; 
	    }else{
	      const int fp = fmapP[sem*p_Nfaces + 1];  
	      qp2  = sface[sep2*p_Nfaces + fp];
	      xcp2 =  sgeo[sid + 1*s_Nsgeo + s_FXID];
	      ycp2 =  sgeo[sid + 1*s_Nsgeo + s_FYID];
	    }

	    if(etype3==s_FVFV_TYPE){
	      qp3   = sq[sep3]; 
	      xcp3  = vgeo[sep3*s_Nvgeo + s_CXID];  
	      ycp3  = vgeo[sep3*s_Nvgeo + s_CYID]; 
	    }else{
	      const int fp = fmapP[sem*p_Nfaces + 2];  
	      qp3  = sface[sep3*p_Nfaces + fp];
	      xcp3 =  sgeo[sid + 2*s_Nsgeo + s_FXID];
	      ycp3 =  sgeo[sid + 2*s_Nsgeo + s_FYID];
	    }


	    if(bc1>0){
	      xcp1 =  sgeo[sid + 0*s_Nsgeo + s_FXID];
	      ycp1 =  sgeo[sid + 0*s_Nsgeo + s_FYID];
	      qp1 = qm; 
	    }
	    if(bc2>0){
	      xcp2 =  sgeo[sid + 1*s_Nsgeo + s_FXID];
	      ycp2 =  sgeo[sid + 1*s_Nsgeo + s_FYID];
	      qp2  = qm; 
	    }
	    if(bc3>0){
	      xcp3 =  sgeo[sid + 2*s_Nsgeo + s_FXID];
	      ycp3 =  sgeo[sid + 2*s_Nsgeo + s_FYID];
	      qp3 = qm;
	    }

	    const dfloat dx1 = (xcp1 - xcm); 
	    const dfloat dy1 = (ycp1 - ycm); 

	    const dfloat dx2 = (xcp2 - xcm); 
	    const dfloat dy2 = (ycp2 - ycm); 

	    const dfloat dx3 = (xcp3 - xcm); 
	    const dfloat dy3 = (ycp3 - ycm); 

	    dfloat a1, a2, a3; 
	    WENO2Coeff(dx1,dy1, dx2,dy2, dx3,dy3, qm,qp1,qp2,qp3, 
		       bc1, bc2, bc3, &a1, &a2, &a3);

	    if(bc1>0 || bc2>0 || bc3>0){
	      for(int i=0; i<5; i++){
		if(bc1>0){qp1 = a1 + a2*dx1 + a3*dy1;}
		if(bc2>0){qp2 = a1 + a2*dx2 + a3*dy2;}
		if(bc3>0){qp3 = a1 + a2*dx3 + a3*dy3;}
		WENO2Coeff(dx1,dy1, dx2,dy2, dx3,dy3, qm,qp1,qp2,qp3, 
			   bc1, bc2, bc3, &a1, &a2, &a3);
	      }
	    }

	    for(int f=0; f<p_Nfaces; f++){
	      // modifed 2nd order WENO 
	      const dfloat fxm = sgeo[sid + f*s_Nsgeo + s_FXID]; 
	      const dfloat fym = sgeo[sid + f*s_Nsgeo + s_FYID];

	      sface[sem*p_Nfaces + f] = a1 + a2*(fxm -xcm) + a3*(fym - ycm); 

	    }
	  }
	}
      }
    }

  }

}



@kernel void lssSubcellComputeTri2D(const dlong Nelements,
				    @restrict const dlong *elmList, 
				    @restrict const dlong *emapP, 
				    @restrict const dlong *fmapP,                                   
				    @restrict const dfloat *  RMT,  
				    @restrict const dfloat *  vgeo,                            
				    @restrict const dfloat *  sgeo,                                         
				    @restrict const dfloat *  q,
				    @restrict const dfloat *  sgnq,
				    @restrict const dfloat *  sface,
				    @restrict dfloat *rhsq){

  for(dlong eo=0;eo<Nelements;eo+=s_Nblocks;@outer(0)){

    @shared dfloat s_rhs[s_Nblocks][s_Ncells]; 
    @exclusive int elmType; 

    for(int es=0;es<s_Nblocks;++es;@inner(1)){
      for(int s=0;s<s_Ncells;++s;@inner(0)){ 
	const dlong e = eo + es;
	if(e<Nelements){
	  elmType = elmList[e]; 

	  dfloat rhss = 0.f; 

	  if(elmType==s_FVFV_TYPE){
	    const dlong sem  =  e*s_Ncells + s; 

	    const dlong vid   = sem*s_Nvgeo;  
	    const dlong sid   = sem*p_Nfaces*s_Nsgeo; 
	    const dfloat ivm  = vgeo[vid + s_IVID]; 

	    dfloat p1 = 0.f, p2 = 0.f; 
	    dfloat q1 = 0.f, q2 = 0.f;

	    for(int fm=0; fm<p_Nfaces; fm++){
	      const dlong  sep  = emapP[e*s_Ncells*p_Nfaces + s*p_Nfaces + fm];
	      const int    fp   = fmapP[e*s_Ncells*p_Nfaces + s*p_Nfaces + fm];

	      const dfloat qfm  = sface[sem*p_Nfaces + fm]; 
	      const dfloat qfp  = sface[sep*p_Nfaces + fp]; 

	      const dfloat nxm  = sgeo[sid + fm*s_Nsgeo + s_NXID];
	      const dfloat nym  = sgeo[sid + fm*s_Nsgeo + s_NYID]; 
	      const dfloat sam  = sgeo[sid + fm*s_Nsgeo + s_SAID];

	      dfloat unx = 0.f, dnx = 1.f; 
	      dfloat uny = 0.f, dny = 1.f; 

	      if(nxm>=0){unx = 1.f; dnx = 0.f; };
	      if(nym>=0){uny = 1.f; dny = 0.f; };

	      p1 += ivm*sam*nxm*( dnx*qfm + unx*qfp);
	      p2 += ivm*sam*nxm*( unx*qfm + dnx*qfp);

	      q1 += ivm*sam*nym*( dny*qfm + uny*qfp);
	      q2 += ivm*sam*nym*( uny*qfm + dny*qfp);
	    }

	    const dfloat rsgn = sgnq[sem]; // regularized sign 

	    const dfloat p  = 0.5*(p1+p2);
	    const dfloat q  = 0.5*(q1+q2);
	    // s_rhs[es][s] = -( rsgn*( sqrt(p*p+q*q)-1.0) - 0.5*(p1-p2) - 0.5*(q1-q2) );
	    rhss = -( rsgn*( sqrt(p*p+q*q)-1.0) - 0.5*(p1-p2) - 0.5*(q1-q2) );
	  }
	  rhsq[e*s_Ncells + s] = rhss;  
	}
      }
    }
  }

}

// batch process elements
@kernel void lssPartialRedistanceSurfaceTri2D(const dlong Nelements,
					      const dlong offset,
					      @restrict const dlong *elmList, 
					      @restrict const dlong *EToE, 
					      @restrict const  int    *  EToB,
					      @restrict const  dfloat *  sgeo,
					      @restrict const  dfloat *  ssgeo,
					      @restrict const  dfloat *  svgeo,
					      @restrict const  dfloat *  LIFTT,
					      @restrict const  dfloat *  RFMT,
					      @restrict const  dlong  *  vmapM,
					      @restrict const  dlong  *  vmapP,
					      @restrict const dlong *emapP, 
					      @restrict const dlong *fmapP,     
					      @restrict const  int    *  mFToE,
					      @restrict const  int    *  mFToF,
					      const  dfloat time,
					      @restrict const  dfloat *  x,
					      @restrict const  dfloat *  y,
					      @restrict const  dfloat *  z,
					      @restrict const  dfloat *  sq,                                  
					      @restrict const  dfloat *  q,
					      @restrict const  dfloat *  sface,
					      @restrict const  dfloat *  gradq,
					      @restrict dfloat *  rhsq){

  // for all elements
  for(dlong eo=0;eo<Nelements;eo+=p_NblockS;@outer(0)){

    // @shared storage for flux terms
    @shared dfloat s_pf1[p_NblockS][p_NfacesNfp];
    @shared dfloat s_pf2[p_NblockS][p_NfacesNfp];
    @shared dfloat s_qf1[p_NblockS][p_NfacesNfp];
    @shared dfloat s_qf2[p_NblockS][p_NfacesNfp];


    // @shared storage for flux terms
    @shared dfloat s_spf1[p_NblockS][s_NfacesNfp];
    @shared dfloat s_spf2[p_NblockS][s_NfacesNfp];
    @shared dfloat s_sqf1[p_NblockS][s_NfacesNfp];
    @shared dfloat s_sqf2[p_NblockS][s_NfacesNfp];

    // @exclusive int elmType, ftype; 
    @exclusive int elmType; 
    // @exclusive int faceDG, faceFV; 

    // for all face nodes of all elements
    for(int es=0;es<p_NblockS;++es;@inner(1)){
      for(int n=0;n<s_maxNodesS;++n;@inner(0)){ // maxNodes = max(Nfp*Nfaces,Np)
	const dlong e = eo + es;
	if(e<Nelements){
	  elmType = elmList[e]; 
	  s_pf1[es][n]= 0.f; s_pf2[es][n]= 0.f;
	  s_qf1[es][n]= 0.f; s_qf2[es][n]= 0.f;

	  if(n<p_NfacesNfp && elmType!=s_FVFV_TYPE){ // DG elements
	    const int face        = n/p_Nfp;   
	    const dlong neigh     = EToE[e*p_Nfaces + face];
	    const int ftype       = elmList[neigh]; 
	    if(ftype!= s_FVFV_TYPE){
	      const dlong sid   = p_Nsgeo*(e*p_Nfaces+face);
	      const dfloat nx   = sgeo[sid+p_NXID];
	      const dfloat ny   = sgeo[sid+p_NYID];
	      const dfloat sJ   = sgeo[sid+p_SJID];
	      const dfloat invJ = sgeo[sid+p_IJID];

	      // indices of negative and positive traces of face node
	      const dlong id  = e*p_Nfp*p_Nfaces + n;
	      const dlong idM = vmapM[id];
	      const dlong idP = vmapP[id];
	      // // load traces
	      const dfloat qM = q[idM];   dfloat qP = q[idP];
	      // apply boundary condition
	      const int bc = EToB[face+p_Nfaces*e];
	      if(bc>0){
		lssDirichletConditions2D(bc, time, x[idM], y[idM], nx, ny, qM, &qP);
	      }

	      const dfloat sc = invJ*sJ; 
	      // simple upwind
	      dfloat unx = 0.0, dnx = 1.0; 
	      dfloat uny = 0.0, dny = 1.0; 
	      if(nx>= 0){unx = 1.0, dnx = 0.0;}
	      if(ny>= 0){uny = 1.0, dny = 0.0;}

	      // Assumes s_N >= Nfp, since it has to be for proper recontruction
	      // const int lid = face*s_N + n%p_Nfp;      
	      // s_pf1[es][lid]= sc*nx*( (dnx*qM  + unx*qP));
	      // s_pf2[es][lid]= sc*nx*( (unx*qM  + dnx*qP));
	      // s_qf1[es][lid]= sc*ny*( (dny*qM  + uny*qP));
	      // s_qf2[es][lid]= sc*ny*( (uny*qM  + dny*qP));

	      s_pf1[es][n]= sc*nx*( (dnx*qM  + unx*qP));
	      s_pf2[es][n]= sc*nx*( (unx*qM  + dnx*qP));
	      s_qf1[es][n]= sc*ny*( (dny*qM  + uny*qP));
	      s_qf2[es][n]= sc*ny*( (uny*qM  + dny*qP));
	    }
	  }
	}
      }
    }

    // wait for all @shared memory writes of the previous inner loop to complete
    @barrier("local");



    // for all face nodes of all elements
    for(int es=0;es<p_NblockS;++es;@inner(1)){
      for(int n=0;n<s_maxNodesS;++n;@inner(0)){ // maxNodes = max(Nfp*Nfaces,Np)
	const dlong e = eo + es;
	if(e<Nelements){
	  s_spf1[es][n] = 0;  s_spf2[es][n] = 0;  
	  s_sqf1[es][n] = 0;  s_sqf2[es][n] = 0; 

	  if(n<s_NfacesNfp && elmType==s_DGFV_TYPE){ // DG elements
	    const int face        = n/s_N;
	    const dlong neigh     = EToE[e*p_Nfaces + face];
	    const int ftype       = elmList[neigh]; 
	    if(ftype==s_FVFV_TYPE){
	      // const int sn      = n%s_N; 
	      const int e0      = mFToE[n]; 
	      const int sfm     = mFToF[n]; 

	      const dlong sem   = e*s_Ncells + e0; 
	      const dlong sep   = emapP[sem*p_Nfaces + sfm];
	      const int   sfp   = fmapP[sem*p_Nfaces + sfm];

	      const dfloat qfm = sface[sem*p_Nfaces + sfm]; 
	      const dfloat qfp = sface[sep*p_Nfaces + sfp];

	      const dlong sid   = sem*p_Nfaces*s_Nsgeo; 
	      const dfloat ivm  = svgeo[sem*s_Nvgeo + s_IVID]; 

	      const dfloat nxm  = ssgeo[sid + sfm*s_Nsgeo + s_NXID];
	      const dfloat nym  = ssgeo[sid + sfm*s_Nsgeo + s_NYID]; 
	      const dfloat sam  = ssgeo[sid + sfm*s_Nsgeo + s_SAID];

	      dfloat unx = 0.f, dnx = 1.f; 
	      dfloat uny = 0.f, dny = 1.f; 

	      if(nxm>=0){unx = 1.f; dnx = 0.f; };
	      if(nym>=0){uny = 1.f; dny = 0.f; };

	      const dfloat invJ = sgeo[p_Nsgeo*(e*p_Nfaces+face)+p_IJID];

	      s_spf1[es][n]= nxm*( dnx*qfm + unx*qfp); 
	      s_spf2[es][n]= nxm*( unx*qfm + dnx*qfp);
	      s_sqf1[es][n]= nym*( dny*qfm + uny*qfp);
	      s_sqf2[es][n]= nym*( uny*qfm + dny*qfp);
	    }
	  }
	}
      }
    }



    @barrier("local"); 

    // for all face nodes of all elements
    for(int es=0;es<p_NblockS;++es;@inner(1)){
      for(int n=0;n<s_maxNodesS;++n;@inner(0)){ // maxNodes = max(Nfp*Nfaces,Np)
	const dlong e = eo + es;
	if(e<Nelements){

	  if(n<p_Nfp && elmType==s_DGFV_TYPE){ // DG elements
	    // const int face        = n/s_N;
	    for(int face =0; face<p_Nfaces; face++){
	      const dlong neigh     = EToE[e*p_Nfaces + face];
	      const int ftype       = elmList[neigh]; 
	      if(ftype==s_FVFV_TYPE){
		dfloat p1 = 0.f, p2 = 0.f; 
		dfloat q1 = 0.f, q2 = 0.f;   

		for(int i=0; i<s_N; i++){
		  const dfloat rfm = RFMT[n + i*p_Nfp]; 
		  const int m = face*s_N + i; 
		  p1 += rfm*s_spf1[es][m];
		  p2 += rfm*s_spf2[es][m];
		  q1 += rfm*s_sqf1[es][m];
		  q2 += rfm*s_sqf2[es][m];
		}

		const dlong sid   = p_Nsgeo*(e*p_Nfaces+face);
		const dfloat sJ   = sgeo[sid+p_SJID];
		const dfloat invJ = sgeo[sid+p_IJID];
		const dfloat sc = invJ*sJ; 
		s_pf1[es][n + face*p_Nfp]= sc*p1;
		s_pf2[es][n + face*p_Nfp]= sc*p2;
		s_qf1[es][n + face*p_Nfp]= sc*q1;
		s_qf2[es][n + face*p_Nfp]= sc*q2;
	      }
	    }
	  }
	}
      }
    }


    // wait for all @shared memory writes of the previous inner loop to complete
    @barrier("local");

    // for each node in the element
    for(int es=0;es<p_NblockS;++es;@inner(1)){
      for(int n=0;n<p_maxNodes;++n;@inner(0)){
	const dlong e = eo + es;
	if(e<Nelements){
	  if(n<p_Np && elmType!=s_FVFV_TYPE){
	    const dlong id = e*p_Np+n;
	    dfloat p1 = 0.f, p2 = 0.f; 
	    dfloat q1 = 0.f, q2 = 0.f;      
	    // 
#pragma unroll p_NfacesNfp
	    for(int m=0;m<p_NfacesNfp;++m){
	      const dfloat L = LIFTT[n+m*p_Np];
	      p1 += L*s_pf1[es][m];
	      p2 += L*s_pf2[es][m];
	      q1 += L*s_qf1[es][m];
	      q2 += L*s_qf2[es][m];
	    }

	    const dfloat sqn  = sq[id];
	    const dfloat dqdx = gradq[id + 0*offset];
	    const dfloat dqdy = gradq[id + 1*offset];

	    p1 +=  dqdx; p2 +=  dqdx; 
	    q1 +=  dqdy; q2 +=  dqdy;

	    const dfloat P = 0.5f*(p1+p2); 
	    const dfloat Q = 0.5f*(q1+q2); 

	    // LLF Numerical Hamiltonian
	    rhsq[id] =  -( sqn*( sqrt( P*P+Q*Q )-1.f) -0.5f*(p1-p2)-0.5*(q1-q2));
	  }
	}
      }
    }
  }
}

// too much flops
void computeGradient(const dfloat xcm,  const dfloat ycm, 
		     const dfloat xcp1, const dfloat ycp1,
		     const dfloat xcp2, const dfloat ycp2,
		     const dfloat xcp3, const dfloat ycp3,
		     const dfloat qm,   const dfloat qp1,
		     const dfloat qp2,  const dfloat qp3,
		     dfloat *dqdx,      dfloat *dqdy){
#if WLSQR

  const dfloat dx1 = (xcp1 - xcm); const dfloat dy1 = (ycp1 - ycm); 
  const dfloat dx2 = (xcp2 - xcm); const dfloat dy2 = (ycp2 - ycm); 
  const dfloat dx3 = (xcp3 - xcm); const dfloat dy3 = (ycp3 - ycm); 


  const dfloat dq1 = (qp1-qm); 
  const dfloat dq2 = (qp2-qm); 
  const dfloat dq3 = (qp3-qm); 

  const dfloat d1 = sqrt( dx1*dx1 + dy1*dy1);
  const dfloat d2 = sqrt( dx2*dx2 + dy2*dy2);
  const dfloat d3 = sqrt( dx3*dx3 + dy3*dy3);

  // const dfloat wl1 = dq1*dq1/(d1*d1) + 1.0; 
  // const dfloat wl2 = dq2*dq2/(d2*d2) + 1.0; 
  // const dfloat wl3 = dq3*dq3/(d3*d3) + 1.0; 

  // const dfloat wl1 = d1; 
  // const dfloat wl2 = d2; 
  // const dfloat wl3 = d3;

  // const dfloat wl1 = (dq1*dq1)/(d1*d1) + 1.0; 
  // const dfloat wl2 = (dq2*dq2)/(d2*d2) + 1.0; 
  // const dfloat wl3 = (dq3*dq3)/(d3*d3) + 1.0;

  const dfloat wl1 = sqrt(dq1*dq1 + d1*d1); 
  const dfloat wl2 = sqrt(dq2*dq2 + d2*d2); 
  const dfloat wl3 = sqrt(dq3*dq3 + d3*d3); 

  // const dfloat wl1  = 1.0/ sqrt( d1*d1*d1*( (dq1/d1)*(dq1/d1)*(dq1/d1)*(dq1/d1) + 1/(d1*d1)));
  // const dfloat wl2  = 1.0/ sqrt( d2*d2*d2*( (dq2/d2)*(dq2/d2)*(dq2/d2)*(dq2/d2) + 1/(d2*d2)));
  // const dfloat wl3  = 1.0/ sqrt( d3*d3*d3*( (dq3/d3)*(dq3/d3)*(dq3/d3)*(dq3/d3) + 1/(d3*d3)));

  // const dfloat wl1 = 1.0; 
  // const dfloat wl2 = 1.0; 
  // const dfloat wl3 = 1.0;

  // distance weighted
  const dfloat w1 = 1.0/wl1; 
  const dfloat w2 = 1.0/wl2; 
  const dfloat w3 = 1.0/wl3;

  // ULSG
  // const dfloat w1 = 1.0; const dfloat w2 = 1.0; const dfloat  w3 = 1.0;  

  const dfloat a1 = w1*dx1; const dfloat a2 = w1*dy1; 
  const dfloat b1 = w2*dx2; const dfloat b2 = w2*dy2; 
  const dfloat c1 = w3*dx3; const dfloat c2 = w3*dy3; 

  const dfloat det = 1.f / ( (a1*b2 - a2*b1)*(a1*b2 - a2*b1) 
			     +(a1*c2 - a2*c1)*(a1*c2 - a2*c1)
			     +(b1*c2 - b2*c1)*(b1*c2 - b2*c1) ); 

  const dfloat r1 = w1*a1*dq1 + w2*b1*dq2 + w3*c1*dq3;
  const dfloat r2 = w1*a2*dq1 + w2*b2*dq2 + w3*c2*dq3;

  *dqdx = det*(  (a2*a2 + b2*b2 + c2*c2)*r1  - (a1*a2 + b1*b2 + c1*c2)*r2);
  *dqdy = det*( -(a1*a2 + b1*b2 + c1*c2)*r1  + (a1*a1 + b1*b1 + c1*c1)*r2);
#endif

#if LSENO
  const dfloat dx1 = (xcp1 - xcm); const dfloat dy1 = (ycp1 - ycm); 
  const dfloat dx2 = (xcp2 - xcm); const dfloat dy2 = (ycp2 - ycm); 
  const dfloat dx3 = (xcp3 - xcm); const dfloat dy3 = (ycp3 - ycm); 


  const dfloat dq1 = (qp1-qm); 
  const dfloat dq2 = (qp2-qm); 
  const dfloat dq3 = (qp3-qm); 

  const dfloat d1 = sqrt( dx1*dx1 + dy1*dy1);
  const dfloat d2 = sqrt( dx2*dx2 + dy2*dy2);
  const dfloat d3 = sqrt( dx3*dx3 + dy3*dy3);

  const dfloat det1 = 1.0/(dx1*dy2 - dx2*dy1); 
  const dfloat dqdx1 = det1*( dy2 * dq1  - dx2*dq2);
  const dfloat dqdy1 = det1*(-dy1 * dq1  + dx1*dq2);

  const dfloat det2 = 1.0/(dx2*dy3 - dx2*dy3); 
  const dfloat dqdx2 = det2*( dy3 * dq2  - dx3*dq3);
  const dfloat dqdy2 = det2*(-dy2 * dq2  + dx2*dq3);

  const dfloat det3 = 1.0/(dx3*dy1 - dx3*dy1); 
  const dfloat dqdx3 = det3*( dy1 * dq3  - dx1*dq1);
  const dfloat dqdy3 = det3*(-dy3 * dq3  + dx3*dq1);

  const dfloat l11 = abs(dqdx1) + abs(dqdy1);
  const dfloat l12 = abs(dqdx2) + abs(dqdy2);
  const dfloat l13 = abs(dqdx3) + abs(dqdy3);

  if (l11 <= l12 && l11 <= l13){
    *dqdx = dqdx1;  *dqdy = dqdy1;        
  }else if (l12 <= l11 && l12 <= l13){
    *dqdx = dqdx2;  *dqdy = dqdy2; 
  }else{
    *dqdx = dqdx3;  *dqdy = dqdy3; 
  }

#endif

#if 0
  const dfloat r11 = sqrt( (xcp1 - xcm)*(xcp1 - xcm) + (xcp2 - xcm)*(xcp2 - xcm) 
			   +(xcp3 - xcm)*(xcp3 - xcm)); 

  const dfloat r12 = ( (xcp1 - xcm)*(ycp1 - ycm) + (xcp2 - xcm)*(ycp2 - ycm)
		       +(xcp3 - xcm)*(ycp3 - ycm))/r11; 

  const dfloat r22 = sqrt( ( (ycp1 - ycm) - (xcp1 - xcm)*r12/r11)*( (ycp1 - ycm) - (xcp1 - xcm)*r12/r11)
			   +( (ycp2 - ycm) - (xcp2 - xcm)*r12/r11)*( (ycp2 - ycm) - (xcp2 - xcm)*r12/r11)
			   +( (ycp3 - ycm) - (xcp3 - xcm)*r12/r11)*( (ycp3 - ycm) - (xcp3 - xcm)*r12/r11));


  const dfloat w1x = (xcp1 - xcm)/(r11*r11) - r12/(r11*r22*r22)*( (ycp1 - ycm) - (xcp1 - xcm)*r12/r11 );
  const dfloat w2x = (xcp2 - xcm)/(r11*r11) - r12/(r11*r22*r22)*( (ycp2 - ycm) - (xcp2 - xcm)*r12/r11 );
  const dfloat w3x = (xcp3 - xcm)/(r11*r11) - r12/(r11*r22*r22)*( (ycp3 - ycm) - (xcp3 - xcm)*r12/r11 );

  const dfloat w1y = 1.f/(r22*r22)*( (ycp1 - ycm) - (xcp1 - xcm)*r12/r11 );
  const dfloat w2y = 1.f/(r22*r22)*( (ycp2 - ycm) - (xcp2 - xcm)*r12/r11 );
  const dfloat w3y = 1.f/(r22*r22)*( (ycp3 - ycm) - (xcp3 - xcm)*r12/r11 );

  const dfloat dqdx = w1x*( qp1-qm ) + w2x*( qp2-qm ) + w3x*( qp3-qm );
  const dfloat dqdy = w1y*( qp1-qm ) + w2y*( qp2-qm ) + w3y*( qp3-qm );
#endif

}



void computeENO2Coeff(const dfloat dx1,  const dfloat dy1, 
		      const dfloat dx2,  const dfloat dy2, 
		      const dfloat dx3,  const dfloat dy3, 
		      dfloat qm,   dfloat qp1, dfloat qp2,  dfloat qp3,
		      const int bc1, const int bc2, const int bc3, 
