@kernel void lbsInitialCondition3D(const dlong Nelements,
                                   const dfloat nu,
                                   const dfloat time,
                                   @restrict const  dfloat *  x,
                                   @restrict const  dfloat *  y,
                                   @restrict const  dfloat *  z,
                                   @restrict        dfloat *  U){

  for(dlong e=0;e<Nelements;++e;@outer(0)){
    for(int n=0;n<p_Np;++n;@inner(0)){
      const dlong id = e*p_Np + n;

      dfloat r = 0.0;
      dfloat u = 0.0;
      dfloat v = 0.0;
      dfloat w = 0.0;

      lbsInitialConditions3D(nu, time, x[id], y[id], z[id], &r, &u, &v,&w);

      const dlong ubase = e*p_Np*p_Nmacro + n;
      U[ubase+0*p_Np] = r;
      U[ubase+1*p_Np] = u;
      U[ubase+2*p_Np] = v;
      U[ubase+3*p_Np] = w;
    }
  }
}
